<h2>Followers</h2>
 <% if @user.empty? %>
  <p>ユーザーはいません</p>
 <% else %>
<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>
            <p>フォロー<%= user.followers.count %></p>
        </td>
        <td>  
            <p>フォロワー<%= user.followeds.count %></p>
        </td>
        <td>
          <%= link_to "Show",user_path(user.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 
<% end %>
  