<main>
<%= render 'books/list', user: @user,  book: @book %>
      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
           <% @books.each do |book| %>
          <tbody>
            <tr>
            <th> <%= image_tag book.user.get_profile_image(100,100) %></th> 
              <td><%= book.user.name %></td>
              <td>フォロー数<%=  book.user.followers.count %></td>
              <td>フォロワー数<%= book.user.followeds.count %></td>
              <td>
                  <% if current_user != book.user %>
                  <% if current_user.following?(book.user) %>
                     <%= link_to "フォロー外す", user_relationships_path(book.user.id), method: :delete %>
                  <% else %>
                    <%= link_to "フォローする", user_relationships_path(book.user.id), method: :post %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to 'Show', user_path(book.user) %></td>
            <% end %>
            </tr>
          </tbody>
        </table>
      </div>
</main>